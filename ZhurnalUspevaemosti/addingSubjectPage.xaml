<Page x:Class="ZhurnalUspevaemosti.addingSubjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhurnalUspevaemosti"
      mc:Ignorable="d"
      Width="550"
      Height="100"
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="addingSubjectPage">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock x:Name="textBlock" Text="Наименование предмета:" FontSize="24" VerticalAlignment="Center"/>
            <TextBox x:Name="subjectNameTextBox" Padding="10,5,10,5" Margin="10,0,0,0" Width="150" FontSize="16" VerticalAlignment="Center"/>
            <Button Content="OK" Margin="10,0,0,-2" Height="35" VerticalAlignment="Center" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
